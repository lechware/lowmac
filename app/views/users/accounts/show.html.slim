section.content
  .row
    .col-md-12
      .box.box-primary
        .box-body
          .row
            .col-xs-2
              = image_tag @account.logo.thumb, alt: 'logo'
            .col-xs-10
              strong
                | Name: 
              |   #{@account.name}
              br
              strong
                | ABN: 
              |   #{@account.business_number}
              br
              strong
                | Address: 
              |   #{@account.address}
              br
              strong
                | Phone: 
              |   #{@account.phone}
              br
              strong
                | Email: 
              |   #{@account.email}
              br
              strong
                | Communication Mode: 
              |   #{@account.comms}
              br
              strong
                | Description: 
              |   #{@account.description}
              = render partial: 'users/settings/details' rescue ''
          
        .box-footer
          = link_to 'Edit', edit_users_account_path(@account), class: 'btn btn-primary'    